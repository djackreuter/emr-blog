<div class="col-lg-8">
  <%= form_for :post, url: posts_path do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <br>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <% end %>
  </div>
