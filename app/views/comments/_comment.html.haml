%div.col-lg-10
  %div.card.comment-card
    %p= comment.body
    %p
      %span -
      = comment.commenter
    %p
      = comment.created_at.in_time_zone('America/Denver').strftime('%b %e %Y,   %l:%m %p')
    - if user_signed_in?
      - if current_user.id == @post.user_id || current_user.admin == true
        = link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure???'}, class: "btn btn-danger comment-button"

