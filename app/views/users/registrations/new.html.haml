.row
  .col
    %h1 
      Sign up
    %hr
.row
  .col-lg-6
    .card.main-card
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        .form-group
          = f.label :name, "Name (First and Last)"
          = f.text_field :name, autofocus: true, class: "form-control"

        .form-group
          = f.label :email       
          = f.email_field :email, autofocus: true, class: "form-control"

        .form-group
          = f.label :country_code
          %br       
          = f.select :country_code, ['1'], autofocus: true, class: "form-control"

        .form-group
          = f.label :phone_number, "Phone number (area code first)"          
          = f.text_field :phone_number, autofocus: true, class: "form-control"

        .form-group
          = f.label :password
          - if @minimum_password_length
            %em
              = @minimum_password_length 
              characters minimum
          
          = f.password_field :password, autocomplete: "off", class: "form-control"

        .form-group
          = f.label :password_confirmation
          
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"

        -# .form-group
        -#   %p
        -#     Write your first post!
        -#     %em
        -#       (Optional)
        
        -# .form-group.fields
        -#   = f.fields_for :posts, Post.new do |ff|
        -#     = render 'posts/form', f: ff

        .actions
          = f.submit "Sign up", class: "btn btn-success"

      = render "devise/shared/links"
